# 로컬 개발환경 (Docker Compose 사용)
SPRING_APPLICATION_NAME=feedShop-local

# 로컬 Docker MySQL 설정
DB_HOST=localhost
DB_PORT=3308
DB_NAME=feedshop_dev
DB_USERNAME=devuser
DB_PASSWORD=dev123!!

# SSL 비활성화 (로컬 개발용)
SSL_ENABLED=false

# JWT 설정 (개발용)
